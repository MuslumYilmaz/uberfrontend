    "files": {
        "package.json": "{\n  \"name\": \"vue-image-slider-solution\",\n  \"version\": \"0.1.0\",\n  \"private\": true,\n  \"dependencies\": {\n    \"vue\": \"3.x\"\n  },\n  \"scripts\": {\n    \"serve\": \"vue-cli-service serve\"\n  }\n}\n",
        "public/index.html": "<!doctype html><html lang=\"en\"><head><meta charset=\"utf-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1\"><title>Vue SDK â€¢ Image Slider (solution)</title></head><body><div id=\"app\"></div></body></html>",
        "src/main.ts": "import { createApp } from 'vue';\nimport App from './App.vue';\nimport './App.css';\n\ncreateApp(App).mount('#app');\n",
        "src/App.vue": "<template>\n  <main class=\"main\">\n    <section class=\"section\">\n      <h1>Image Slider (Solution)</h1>\n\n      <figure class=\"frame\" v-if=\"currentSlide\">\n        <img\n          class=\"image\"\n          :src=\"currentSlide.imageUrl\"\n          :alt=\"currentSlide.title\"\n        />\n        <figcaption class=\"caption\">{{ currentSlide.title }}</figcaption>\n      </figure>\n\n      <div class=\"meta\">\n        Slide {{ currentIndex + 1 }} of {{ totalSlides }}\n      </div>\n\n      <div class=\"actions\">\n        <button type=\"button\" @click=\"prev\" :disabled=\"!canGoPrev\">\n          Previous\n        </button>\n        <button type=\"button\" @click=\"next\" :disabled=\"!canGoNext\">\n          Next\n        </button>\n      </div>\n\n      <div class=\"dots\">\n        <button\n          v-for=\"(slide, index) in slides\"\n          :key=\"slide.id\"\n          type=\"button\"\n          class=\"dot\"\n          :class=\"{ 'dot--active': index === currentIndex }\"\n          @click=\"goTo(index)\"\n          :aria-label=\"slide.title\"\n        ></button>\n      </div>\n    </section>\n  </main>\n</template>\n\n<script setup lang=\"ts\">\nimport { computed, ref } from 'vue';\n\ntype Slide = {\n  id: number;\n  title: string;\n  imageUrl: string;\n};\n\nconst slides = ref<Slide[]>([\n  {\n    id: 1,\n    title: 'Snowflakes glowing under city lights',\n    imageUrl: 'https://picsum.photos/seed/slide-1/800/400'\n  },\n  {\n    id: 2,\n    title: 'Forest trail in the morning',\n    imageUrl: 'https://images.pexels.com/photos/1563604/pexels-photo-1563604.jpeg'\n  },\n  {\n    id: 3,\n    title: 'City lights at night',\n    imageUrl: 'https://images.pexels.com/photos/220067/pexels-photo-220067.jpeg'\n  }\n]);\n\nconst currentIndex = ref(0);\n\nconst totalSlides = computed(() => slides.value.length);\nconst currentSlide = computed(() => slides.value[currentIndex.value] ?? null);\n\nconst canGoPrev = computed(() => currentIndex.value > 0);\nconst canGoNext = computed(() => currentIndex.value < totalSlides.value - 1);\n\nconst goTo = (index: number) => {\n  if (index < 0 || index >= totalSlides.value) {\n    return;\n  }\n  currentIndex.value = index;\n};\n\nconst prev = () => {\n  if (!canGoPrev.value) return;\n  currentIndex.value -= 1;\n};\n\nconst next = () => {\n  if (!canGoNext.value) return;\n  currentIndex.value += 1;\n};\n</script>\n",
        "src/App.css": ":root { color-scheme: dark; }\nhtml, body { margin: 0; height: 100%; background:#0a0a0a; font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; }\n\n.main { min-height:100vh; background:#0a0a0a; color:#e5e7eb; display:grid; place-items:center; padding:24px; }\n.section { width:100%; max-width:520px; display:grid; gap:16px; }\nh1 { margin:0; font-size:20px; font-weight:700; }\n\n.frame { margin:0; border-radius:12px; overflow:hidden; border:1px solid #1f2937; background:#020617; }\n.image { display:block; width:100%; height:240px; object-fit:cover; }\n.caption { padding:8px 12px; font-size:14px; color:#e5e7eb; background:rgba(15,23,42,.9); }\n.meta { font-size:12px; color:#9ca3af; text-align:center; }\n.actions { display:flex; gap:8px; justify-content:center; margin-top:4px; }\n\nbutton { background:#a3e635; color:#111; border:none; border-radius:10px; padding:10px 14px; font-weight:700; cursor:pointer; }\nbutton[disabled] { opacity:.5; cursor:not-allowed; }\n.dots { display:flex; justify-content:center; gap:6px; margin-top:6px; }\n.dot { width:8px; height:8px; border-radius:999px; border:none; background:#374151; cursor:pointer; padding:0; }\n.dot.dot--active { background:#a3e635; }\n",
        "tsconfig.json": "{\n  \"compilerOptions\": {\n    \"target\": \"ES2020\",\n    \"module\": \"ESNext\",\n    \"moduleResolution\": \"Node\",\n    \"strict\": true,\n    \"allowJs\": true\n  }\n}\n"
    }
}
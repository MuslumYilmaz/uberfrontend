    "openFile": "/src/App.vue",
    "files": {
        "package.json": "{\n  \"name\": \"vue-accordion-faq-solution\",\n  \"version\": \"0.1.0\",\n  \"private\": true,\n  \"dependencies\": {\n    \"vue\": \"3.x\"\n  },\n  \"scripts\": {\n    \"serve\": \"vue-cli-service serve\"\n  }\n}\n",
        "public/index.html": "<!doctype html><html lang=\"en\"><head><meta charset=\"utf-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1\"><title>Vue SDK â€¢ Accordion / FAQ (solution)</title></head><body><div id=\"app\"></div></body></html>",
        "src/main.ts": "import { createApp } from 'vue';\nimport App from './App.vue';\nimport './App.css';\n\ncreateApp(App).mount('#app');\n",
        "src/App.vue": "<template>\n  <main class=\"app-root\">\n    <section class=\"card\">\n      <header class=\"header\">\n        <h1>FAQ (Solution)</h1>\n        <label class=\"mode-toggle\">\n          <input\n            type=\"checkbox\"\n            :checked=\"allowMultiple\"\n            @change=\"onToggleAllowMultiple\"\n          />\n          <span>Allow multiple open</span>\n        </label>\n      </header>\n\n      <div class=\"faq-list\">\n        <article\n          v-for=\"(item, index) in faqItems\"\n          :key=\"item.question\"\n          :class=\"['faq-item', { open: isItemOpen(index) }]\"\n        >\n          <button\n            type=\"button\"\n            class=\"faq-header\"\n            @click=\"onItemToggle(index)\"\n            :aria-expanded=\"isItemOpen(index)\"\n          >\n            <span class=\"question\">{{ item.question }}</span>\n            <span class=\"indicator\">{{ isItemOpen(index) ? '-' : '+' }}</span>\n          </button>\n\n          <div v-if=\"isItemOpen(index)\" class=\"faq-body\">\n            <p>{{ item.answer }}</p>\n          </div>\n        </article>\n      </div>\n    </section>\n  </main>\n</template>\n\n<script setup lang=\"ts\">\nimport { ref } from 'vue';\n\ntype FaqItemType = {\n  question: string;\n  answer: string;\n};\n\nconst faqItems: FaqItemType[] = [\n  {\n    question: 'Lorem ipsum dolor sit amet?',\n    answer: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed non risus euismod, posuere justo ut, pulvinar neque.'\n  },\n  {\n    question: 'Curabitur blandit tempus porttitor?',\n    answer: 'Curabitur blandit tempus porttitor. Integer posuere erat a ante venenatis dapibus posuere velit aliquet.'\n  },\n  {\n    question: 'Aenean lacinia bibendum nulla sed consectetur?',\n    answer: 'Aenean lacinia bibendum nulla sed consectetur. Cras justo odio, dapibus ac facilisis in, egestas eget quam.'\n  },\n  {\n    question: 'Vivamus sagittis lacus vel augue laoreet rutrum?',\n    answer: 'Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Maecenas faucibus mollis interdum.'\n  }\n];\n\nconst allowMultiple = ref(false);\nconst openIndexes = ref<number[]>([]);\n\nconst isItemOpen = (index: number): boolean => {\n  return openIndexes.value.includes(index);\n};\n\nconst onItemToggle = (index: number) => {\n  if (allowMultiple.value) {\n    // Multi-open: treat openIndexes as a set\n    if (isItemOpen(index)) {\n      openIndexes.value = openIndexes.value.filter((i) => i !== index);\n    } else {\n      openIndexes.value = [...openIndexes.value, index];\n    }\n    return;\n  }\n\n  // Single-open mode\n  if (isItemOpen(index)) {\n    openIndexes.value = [];\n  } else {\n    openIndexes.value = [index];\n  }\n};\n\nconst onToggleAllowMultiple = () => {\n  // If we are currently in multi mode and going back to single mode,\n  // normalize openIndexes to keep only the first open item\n  if (allowMultiple.value && openIndexes.value.length > 1) {\n    openIndexes.value = openIndexes.value.length\n      ? [openIndexes.value[0]]\n      : [];\n  }\n\n  // Toggle the mode\n  allowMultiple.value = !allowMultiple.value;\n};\n</script>\n",
        "src/App.css": ":root { color-scheme: dark; }\nhtml, body { margin: 0; height: 100%; background:#020617; font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; }\n\n.app-root { min-height:100vh; background:#020617; color:#e5e7eb; display:grid; place-items:center; padding:24px; }\n.card { width:100%; max-width:520px; background:#020617; border-radius:16px; border:1px solid #1f2937; padding:20px; box-sizing:border-box; }\n.header { display:flex; align-items:center; justify-content:space-between; margin-bottom:12px; }\n.header h1 { margin:0; font-size:20px; font-weight:700; }\n.mode-toggle { display:flex; align-items:center; gap:6px; font-size:12px; color:#9ca3af; }\n.faq-list { margin-top:4px; }\n\n.faq-item { background:#0b1020; border-radius:12px; border:1px solid #1f2937; overflow:hidden; transition:background-color .15s ease, border-color .15s ease; }\n.faq-item + .faq-item { margin-top:8px; }\n.faq-item.open { background:#020617; border-color:#4b5563; }\n\n.faq-header { width:100%; display:flex; justify-content:space-between; align-items:center; gap:8px; padding:12px 14px; background:transparent; border:none; color:#e5e7eb; font-size:14px; cursor:pointer; text-align:left; }\n.faq-header:hover { background:rgba(148,163,184,0.06); }\n.indicator { font-weight:700; }\n.faq-body { padding:0 14px 12px; font-size:13px; color:#9ca3af; }\n",
        "tsconfig.json": "{\n  \"compilerOptions\": {\n    \"target\": \"ES2020\",\n    \"module\": \"ESNext\",\n    \"moduleResolution\": \"Node\",\n    \"strict\": true,\n    \"allowJs\": true\n  }\n}\n"
    }
}
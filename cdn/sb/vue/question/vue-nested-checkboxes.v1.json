        "package.json": "{\n  \"name\": \"vue-nested-checkboxes\",\n  \"version\": \"0.1.0\",\n  \"private\": true,\n  \"dependencies\": {\n    \"vue\": \"3.x\"\n  },\n  \"scripts\": {\n    \"serve\": \"vue-cli-service serve\"\n  }\n}\n",
        "public/index.html": "<!doctype html><html lang=\"en\"><head><meta charset=\"utf-8\"><meta name=\"viewport\" content=\"width=device-width,initial-scale=1\"><title>Vue SDK â€¢ Nested Checkboxes</title></head><body><div id=\"app\"></div></body></html>",
        "src/main.ts": "import { createApp } from 'vue';\nimport App from './App.vue';\nimport './App.css';\n\ncreateApp(App).mount('#app');\n",
        "src/App.vue": "<template>\n  <main class=\"main\">\n    <section class=\"section\">\n      <h1>Nested Checkboxes</h1>\n\n      <div class=\"panel\">\n        <label class=\"parent\">\n          <input\n            type=\"checkbox\"\n            :checked=\"parentChecked\"\n            @change=\"onParentChange\"\n          />\n          <span>Parent</span>\n        </label>\n\n        <div class=\"children\">\n          <label\n            v-for=\"child in children\"\n            :key=\"child.id\"\n            class=\"child\"\n          >\n            <input\n              type=\"checkbox\"\n              :checked=\"child.checked\"\n              @change=\"() => onChildChange(child.id)\"\n            />\n            <span>{{ child.label }}</span>\n          </label>\n        </div>\n      </div>\n    </section>\n  </main>\n</template>\n\n<script setup lang=\"ts\">\nimport { ref } from 'vue';\n\ntype ChildNode = {\n  id: string;\n  label: string;\n  checked: boolean;\n};\n\n// Parent checkbox state\n// In the solution, this will control all children when toggled.\nconst parentChecked = ref(false);\n\n// Children list (each child has its own checked flag)\nconst children = ref<ChildNode[]>([\n  { id: 'c1', label: 'Child 1', checked: false },\n  { id: 'c2', label: 'Child 2', checked: false },\n  { id: 'c3', label: 'Child 3', checked: false }\n]);\n\n// TODO (solution): when parent changes, update all children based on parentChecked.\nconst onParentChange = (_event: Event) => {\n  // starter: no-op so UI renders; students will implement logic.\n};\n\n// TODO (solution): when a child changes, toggle only that child.\n// Parent should NOT auto-change or become indeterminate.\nconst onChildChange = (_id: string) => {\n  // starter: no-op so UI renders; students will implement logic.\n};\n</script>\n",
        "src/App.css": ":root { color-scheme: dark; }\nhtml, body { margin: 0; height: 100%; background:#0a0a0a; font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; }\n\n.main { min-height:100vh; background:#0a0a0a; color:#e5e7eb; display:grid; place-items:center; padding:24px; }\n.section { width:100%; max-width:420px; display:grid; gap:16px; }\nh1 { margin:0; font-size:20px; font-weight:700; }\n\n.panel { background:#0b1020; border:1px solid #1f2937; border-radius:12px; padding:16px; display:grid; gap:12px; }\n.parent { display:flex; align-items:center; gap:8px; font-size:16px; font-weight:600; }\n.children { display:grid; gap:6px; margin-left:24px; }\n.child { display:flex; align-items:center; gap:8px; font-size:14px; }\n.child input[type=checkbox], .parent input[type=checkbox] { width:16px; height:16px; }\n",
        "tsconfig.json": "{\n  \"compilerOptions\": {\n    \"target\": \"ES2020\",\n    \"module\": \"ESNext\",\n    \"moduleResolution\": \"Node\",\n    \"strict\": true,\n    \"allowJs\": true\n  }\n}\n"
